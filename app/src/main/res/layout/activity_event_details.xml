        android:layout_alignTop="@+id/textViewEventName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewEventName"
        android:editable="false" />

    <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/spinner1"
    android:drawSelectorOnTop="true"
    android:entries="@array/spinnerItems"
    android:spinnerMode="dialog"
        android:layout_below="@+id/textViewDayOneDate"
        android:layout_alignParentEnd="@+id/textViewEventName"
        android:prompt="@string/SelectOne"
        android:layout_alignStart="@+id/textViewScheduleTitle" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:drawSelectorOnTop="true"
        android:entries="@array/spinnerItems"
        android:spinnerMode="dialog"
        android:layout_below="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_alignParentEnd="@+id/spinner1"
        android:prompt="@string/SelectOne" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:drawSelectorOnTop="true"
        android:entries="@array/spinnerItems"
        android:spinnerMode="dialog"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="@+id/spinner2"
        android:prompt="@string/SelectOne"
        android:layout_alignStart="@+id/spinner2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
