        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSaveAvailability"
        android:layout_below="@+id/spinner15"
        android:layout_alignStart="@+id/spinner15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sked It!"
        android:id="@+id/buttonSked"
        android:layout_alignTop="@+id/buttonSaveAvailability"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
